{% extends 'base.html.twig' %}

{% block title %}Mon Profil - Les Restes{% endblock %}

{% block meta_description %}Gérez votre profil, vos recettes publiées et vos favoris sur Les Restes.{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script type="module" defer>
        import '{{ asset('js/profile.js') }}';
    </script>
{% endblock %}

{% block body %}
<div class="container my-5">
    <h1 class="text-center text-success mb-5">
        {{ user.prenom }} {{ user.nom }} <span class="text-secondary h5">({{ user.email|split('@')[0] }})</span>
    </h1>
    
    <div class="row mb-5 profile-card-wrapper">
        <div class="col-lg-5 mb-4 mb-lg-0">
            <section class="card border-success h-100 shadow-sm" aria-labelledby="profile-info-title">
                <div class="card-body text-center p-4 d-flex flex-column justify-content-center">
                    <h2 id="profile-info-title" class="visually-hidden">Informations personnelles</h2>
                    {% if user.photo %}
                        <img src="{{ ('uploads/profils/' ~ user.photo) | imagine_filter('profil_full') }}" 
                             alt="Photo de profil de {{ user.prenom }}" 
                             width="120" height="120"
                             fetchpriority="high"
                             loading="eager"
                             class="rounded-circle mx-auto mb-3 shadow-sm"
                             style="width: 120px; height: 120px; object-fit: cover; background: #f8f9fa;">
                    {% else %}
                        <div class="rounded-circle bg-success d-flex align-items-center justify-content-center mx-auto mb-3 shadow-sm" 
                             style="width: 120px; height: 120px;" role="img" aria-label="Avatar par défaut">
                            <i class="bi bi-person-fill text-white" aria-hidden="true" style="font-size: 3rem;"></i>
                        </div>
                    {% endif %}
                    
                    <p class="h4 text-success mb-1">{{ user.prenom }} {{ user.nom }}</p>
                    <p class="text-secondary mb-3">{{ user.email }}</p>
                    
                    <a href="{{ path('app_profil_edit') }}" class="btn btn-outline-success">
                        <i class="bi bi-pencil" aria-hidden="true"></i> Modifier le profil
                    </a>
                </div>
            </section>
        </div>
        
        <div class="col-lg-7">
            <section class="card border-success h-100 shadow-sm" aria-labelledby="stats-title">
                <div class="card-body p-4 d-flex flex-column justify-content-center">
                    <h2 id="stats-title" class="h5 text-success mb-4 text-center">Mes Statistiques</h2>
                    <div class="row align-items-center">
                        <div class="col-md-6 text-center">
                            <canvas id="statsChart" 
                                    data-published="{{ mesRecettes.getTotalItemCount }}" 
                                    data-favorites="{{ mesFavoris.getTotalItemCount }}"
                                    width="200" height="200" 
                                    role="img" aria-label="Graphique de mes statistiques"></canvas>
                        </div>
                        <div class="col-md-6">
                            <div class="d-flex flex-column gap-3">
                                <div class="d-flex justify-content-between align-items-center p-2 rounded border" style="background-color: rgba(25, 135, 84, 0.05);">
                                    <span class="fw-bold text-dark">Publiées</span>
                                    <span class="badge bg-success fs-6">{{ mesRecettes.getTotalItemCount }}</span>
                                </div>
                                <div class="d-flex justify-content-between align-items-center p-2 rounded border" style="background-color: rgba(25, 135, 84, 0.05);">
                                    <span class="fw-bold text-dark">Vues</span>
                                    <span class="badge bg-secondary fs-6">0</span>
                                </div>
                                <div class="d-flex justify-content-between align-items-center p-2 rounded border" style="background-color: rgba(25, 135, 84, 0.05);">
                                    <span class="fw-bold text-dark">Favoris</span>
                                    <span class="badge bg-danger fs-6">{{ mesFavoris.getTotalItemCount }}</span>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </section>
        </div>
    </div>
    
    <div class="d-flex justify-content-between align-items-center mb-4">
        <ul class="nav nav-tabs mb-4 border-bottom-0" id="profilTab" role="tablist">
            <li class="nav-item" role="presentation">
                <button class="nav-link active fw-bold" id="recettes-tab" data-bs-toggle="tab" data-bs-target="#recettes" type="button" role="tab" aria-controls="recettes" aria-selected="true">
                    <i class="bi bi-book me-1" aria-hidden="true"></i> Mes Recettes
                </button>
            </li>
            <li class="nav-item" role="presentation">
                <button class="nav-link fw-bold" id="favoris-tab" data-bs-toggle="tab" data-bs-target="#favoris" type="button" role="tab" aria-controls="favoris" aria-selected="false">
                    <i class="bi bi-heart me-1" aria-hidden="true"></i> Mes Favoris
                </button>
            </li>
        </ul>
        <a href="{{ path('app_recette_new') }}" class="btn btn-success shadow-sm">
            <i class="bi bi-plus-circle me-1" aria-hidden="true"></i> Publier une recette
        </a>
    </div>

    <div class="tab-content" id="profilTabContent">
        <div class="tab-pane fade show active" id="recettes" role="tabpanel" aria-labelledby="recettes-tab">
            {% if mesRecettes.getTotalItemCount > 0 %}
                <div class="row">
                    {% for recette in mesRecettes %}
                        <div class="col-md-6 col-lg-4 mb-4">
                            {{ include('recette/partials/_recipe_card.html.twig', {
                                'recette': recette,
                                'show_author': false
                            }) }}
                            <div class="d-flex gap-2 mt-2">
                                {% if is_granted('RECETTE_EDIT', recette) %}
                                   <a href="{{ path('app_recette_edit', {'id': recette.id}) }}" class="btn btn-outline-primary btn-sm flex-grow-1">
                                      <i class="bi bi-pencil" aria-hidden="true"></i> Modifier
                                    </a>
                                {% endif %}

                                {% if is_granted('RECETTE_DELETE', recette) %}
                                    <button type="button" class="btn btn-outline-danger btn-sm" 
                                            onclick="confirmerSuppression({{ recette.id }}, '{{ recette.nom|escape('js') }}')"
                                            aria-label="Supprimer la recette {{ recette.nom }}">
                                        <i class="bi bi-trash" aria-hidden="true"></i> Supprimer
                                    </button>
                                 {% endif %}
                            </div>
                        </div>
                    {% endfor %}
                </div>
                <div class="d-flex justify-content-center mt-4">{{ knp_pagination_render(mesRecettes) }}</div>
            {% else %}
                {{ include('partials/_empty_state.html.twig', {
                    'icon': 'bi-journal-plus',
                    'title': 'Aucune recette publiée',
                    'link_path': path('app_recette_new'),
                    'btn_label': 'Publier une recette'
                }) }}
            {% endif %}
        </div>
        
        <div class="tab-pane fade" id="favoris" role="tabpanel" aria-labelledby="favoris-tab">
            {% if mesFavoris.getTotalItemCount > 0 %}
                <div class="row">
                    {% for favori in mesFavoris %}
                        <div class="col-md-6 col-lg-4 mb-4">
                            {{ include('recette/partials/_recipe_card.html.twig', {
                                'recette': favori.recette
                            }) }}
                            <p class="text-center small text-secondary mt-1">Ajouté le {{ favori.dateAjout|date('d/m/Y') }}</p>
                        </div>
                    {% endfor %}
                </div>
                <div class="d-flex justify-content-center mt-4">{{ knp_pagination_render(mesFavoris) }}</div>
            {% else %}
                {{ include('partials/_empty_state.html.twig', {
                    'icon': 'bi-heart',
                    'title': 'Aucun favori',
                    'link_path': path('app_recette_index'),
                    'btn_label': 'Découvrir des recettes',
                    'btn_class': 'btn-outline-success'
                }) }}
            {% endif %}
        </div>
    </div>
</div>

{# Formulaires de suppression invisibles #}
{% for recette in mesRecettes %}
    {% if is_granted('RECETTE_DELETE', recette) %}
        <form method="post" action="{{ path('app_recette_delete', {'id': recette.id}) }}" id="delete-form-{{ recette.id }}" style="display: none;">
            <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ recette.id) }}">
        </form>
    {% endif %}
{% endfor %}

{# Modal de confirmation unique #}
<div class="modal fade" id="deleteModal" tabindex="-1" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h2 class="h5 modal-title">Confirmer la suppression</h2>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Fermer"></button>
            </div>
            <div class="modal-body text-dark">
                <p>Êtes-vous sûr de vouloir supprimer la recette <strong id="recetteName"></strong> ?</p>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Annuler</button>
                <button type="button" class="btn btn-danger" id="confirmDelete">Supprimer</button>
            </div>
        </div>
    </div>
</div>
{% endblock %}