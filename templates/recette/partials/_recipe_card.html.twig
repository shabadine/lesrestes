{# Carte recette reutilisable #}
{% set show_author = show_author ?? true %}
<div class="card h-100 shadow-sm border-0">
    {% if recette.image %}
        <img src="{{ asset('uploads/recettes/' ~ recette.image) | imagine_filter('thumb_recette') }}" 
             class="card-img-top" 
             width="612" height="312"
             loading="lazy"
             style="height: 312px; object-fit: cover;"
             alt="Photo de la recette : {{ recette.nom }}"> 
    {% else %}
        <div class="card-img-top bg-light d-flex align-items-center justify-content-center" 
             style="height: 312px;"
             role="img"
             aria-label="Image d'illustration par défaut pour la recette {{ recette.nom }}">
            <i class="bi bi-image text-secondary" aria-hidden="true" style="font-size: 4rem;"></i>
        </div>
    {% endif %}

    <div class="card-body d-flex flex-column">
        <h3 class="card-title h5 font-weight-bold">{{ recette.nom }}</h3>
    
        <div class="mb-2" role="img" aria-label="Note : {{ recette.moyenneNotes|default(0)|round }} sur 5 étoiles">
            {% set note = recette.moyenneNotes|default(0)|round %}
            {% for i in 1..5 %}
                <i class="bi bi-star{{ i <= note ? '-fill' : '' }} text-warning" aria-hidden="true"></i>
            {% endfor %}
            
            <span class="ms-1 small text-secondary">({{ recette.commentaires|length }})</span>
        </div>
        
        <p class="card-text text-dark small flex-grow-1">
            {{ recette.description|length > 100 ? recette.description|slice(0, 100) ~ '...' : recette.description }}
        </p>
        
        <div class="row text-center small text-dark mb-3">
            <div class="col-4" aria-label="Temps de cuisson">
                <i class="bi bi-clock" aria-hidden="true"></i> {{ recette.tempsCuisson }} min
            </div>
            <div class="col-4 border-start border-end" aria-label="Difficulté">
                <i class="bi bi-person-gear" aria-hidden="true"></i> 
                {% if recette.difficulte == 1 %}Facile
                {% elseif recette.difficulte == 2 %}Moyen
                {% else %}Difficile{% endif %}
            </div>
            <div class="col-4" aria-label="Nombre de personnes">
                <i class="bi bi-people" aria-hidden="true"></i> {{ recette.nombrePersonnes }}
            </div>
        </div>
        
        <div class="d-flex justify-content-between align-items-center mt-auto">
            <small class="text-secondary">Par <strong>{{ recette.user.prenom }}</strong></small>
            
            <a href="{{ path('app_recette_show', {'id': recette.id}) }}" 
               class="btn btn-success btn-sm px-3 py-2" 
               style="min-height: 44px; display: flex; align-items: center;"
               aria-label="Voir la recette complète de {{ recette.nom }}">
                <i class="bi bi-eye me-1" aria-hidden="true"></i> Voir
            </a>
        </div>
    </div>
</div>