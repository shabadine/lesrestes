{# templates/recette/partials/_recipe_card.html.twig #}
{% set show_author = show_author ?? true %}
{% set is_priority = loop is defined and loop.index <= 3 %}

<div class="card h-100 shadow-sm border-0">
    {% if recette.image %}
        <img src="{{ asset('uploads/recettes/' ~ recette.image) | imagine_filter('thumb_recette') }}" 
             class="card-img-top" 
             {% if is_priority %}
                fetchpriority="high"
                loading="eager"
             {% else %}
                loading="lazy"
             {% endif %}
             alt="Photo de la recette : {{ recette.nom }}"> 
    {% else %}
        <div class="card-img-top bg-light d-flex align-items-center justify-content-center" 
             role="img"
             aria-label="Image par défaut : {{ recette.nom }}">
            <i class="bi bi-image text-secondary" style="font-size: 3rem;"></i>
        </div>
    {% endif %}

    <div class="card-body d-flex flex-column">
        <h3 class="card-title h5">{{ recette.nom }}</h3>

        {% if selectedIngredients is defined and selectedIngredients|length > 0 %}
            {% set matchCount = 0 %}
            {% for recetteIngredient in recette.recetteIngredients %}
                {% if recetteIngredient.ingredient in selectedIngredients %}
                    {% set matchCount = matchCount + 1 %}
                {% endif %}
            {% endfor %}
            {% if matchCount > 0 %}
                <div>
                    <span class="badge bg-success mb-2">
                        <i class="bi bi-check2-circle"></i> {{ matchCount }}/{{ recette.recetteIngredients|length }} ingrédients
                    </span>
                </div>
            {% endif %}
        {% endif %}
        
        <div class="mb-2" role="img" aria-label="Note : {{ recette.moyenneNotes|default(0)|round }} sur 5 étoiles">
            {% set note = recette.moyenneNotes|default(0)|round %}
            {% for i in 1..5 %}<i class="bi bi-star{{ i <= note ? '-fill' : '' }} text-warning"></i>{% endfor %}
            <span class="ms-1 small text-secondary">({{ recette.commentaires|length }})</span>
        </div>
        
        <p class="card-text text-dark small flex-grow-1">
            {{ recette.description|length > 65 ? recette.description|slice(0, 65) ~ '...' : recette.description }}
        </p>
        
        <div class="row text-center small text-dark mb-3">
            <div class="col-4 px-1"><i class="bi bi-clock"></i> {{ recette.tempsCuisson }} min</div>
            <div class="col-4 px-1 border-start border-end">
                <i class="bi bi-person-gear"></i> 
                {% if recette.difficulte == 1 %}Facile{% elseif recette.difficulte == 2 %}Moyen{% else %}Difficile{% endif %}
            </div>
            <div class="col-4 px-1"><i class="bi bi-people"></i> {{ recette.nombrePersonnes }}</div>
        </div>
        
        <div class="d-flex justify-content-between align-items-center mt-auto">
            {% if show_author %}
                <small class="text-secondary text-truncate me-2">Par <strong>{{ recette.user.prenom }}</strong></small>
            {% endif %}
            
            <a href="{{ path('app_recette_show', {'id': recette.id}) }}" 
            class="btn btn-success btn-sm px-3" 
            style="min-height: 38px; display: flex; align-items: center;"
            aria-label="Voir la recette de {{ recette.nom }}">
                Voir
            </a>
        </div>
    </div>
</div>