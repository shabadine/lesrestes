<div class="mb-4">
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h2 class="h5 mb-0 text-dark">
            <i class="bi bi-funnel-fill text-success" aria-hidden="true"></i> Recherche avancée
        </h2>
        <button class="btn btn-outline-success btn-sm fw-bold" 
                type="button" 
                data-bs-toggle="collapse" 
                data-bs-target="#searchCollapse"
                aria-expanded="false"
                aria-controls="searchCollapse">
            <i class="bi bi-chevron-down"></i> Afficher les filtres
        </button>
    </div>

    <div class="collapse" id="searchCollapse">
                <div class="search-bar-container">
            {{ form_start(searchForm, {
                method: 'GET',
                attr: {
                    class: 'row g-3 align-items-end',
                    novalidate: 'novalidate'
                }
            }) }}

                <div class="col-md-4">
                    {{ form_row(searchForm.query, {
                        label: 'Recherche par mot-clé',
                        attr: { placeholder: 'Ex: Tarte, Pomme…', class: 'form-control form-control-lg' }
                    }) }}
                </div>

                <div class="col-md-2">
                    {{ form_row(searchForm.categorie, { label: 'Catégorie', attr: { class: 'form-select' } }) }}
                </div>

                <div class="col-md-2">
                    {{ form_row(searchForm.difficulte, { label: 'Difficulté', attr: { class: 'form-select' } }) }}
                </div>

                <div class="col-md-2">
                    {{ form_row(searchForm.tempsMax, { label: 'Temps max (min)', attr: { class: 'form-control' } }) }}
                </div>

                <div class="col-md-2">
                    {{ form_row(searchForm.tri, { label: 'Trier par', attr: { class: 'form-select' } }) }}
                </div>

                <div class="col-12 d-flex justify-content-end gap-2 mt-4">
                    <a href="{{ path('app_recette_index') }}" class="btn btn-light border">
                        <i class="bi bi-arrow-clockwise"></i> Réinitialiser
                    </a>
                    <button type="submit" class="btn btn-success px-4">
                        <i class="bi bi-search"></i> Appliquer les filtres
                    </button>
                </div>

            {{ form_end(searchForm) }}
        </div>
    </div>
</div>

<script>
document.addEventListener('DOMContentLoaded', function() {
    const urlParams = new URLSearchParams(window.location.search);
    // On vérifie si un paramètre de filtre est présent dans l'URL
    const hasFilters = Array.from(urlParams.keys()).some(key => key.includes('recherche_avancee'));
    
    const collapseEl = document.getElementById('searchCollapse');
    
    // On vérifie que l'élément existe bien sur la page avant d'agir
    if (hasFilters && collapseEl) {
        try {
            const bsCollapse = new bootstrap.Collapse(collapseEl, { show: true });
        } catch (e) {
            // Repli si l'objet bootstrap n'est pas encore chargé
            collapseEl.classList.add('show');
        }
    }
});
</script>